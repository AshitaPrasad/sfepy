CDIR = $(notdir $(CURDIR))
DESTDIR = $(DISTDIR)/$(CDIR)

DISTFILES = *.tex *.fig *.latex Makefile.dist
RELDISTFILES = $(DISTFILES)

dist:
	mkdir $(DESTDIR)
	-cp -fpd $(DISTFILES) $(DESTDIR)

reldist:
	mkdir $(DESTDIR)
	-cp -fpd $(RELDISTFILES) $(DESTDIR)
